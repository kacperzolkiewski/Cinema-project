{
  "name": "cinema-app-frontend",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.1.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.8",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@react-types/shared": "^3.4.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.8.1",
    "@types/jest": "^26.0.19",
    "@types/node": "^12.20.4",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-redux": "^7.1.14",
    "@types/react-router-dom": "^5.1.6",
    "eslint-config-prettier": "^8.1.0",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "react-scripts": "^4.0.3",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "build": "react-scripts build",
    "code:check": "npm run lint:check && npm run format:check",
    "code:fix": "npm run lint:fix && npm run format:fix",
    "format:check": "prettier --check src",
    "format:fix": "prettier --write src",
    "lint:check": "eslint --ext .ts,.tsx src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "start": "REACT_APP_ENV=development react-scripts start",
    "test": "react-scripts test"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix --max-warnings 0"
    ]
  },
  "browserslist": {
    "production": [
      "> 0.2%",
      "not dead",
      "not op_mini all",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version",
      "last 1 opera version"
    ]
  }
}
