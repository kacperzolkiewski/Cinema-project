{
    "name": "coderscamp2020.cinemaapp",
    "version": "1.0.0",
    "description": "You can make a reservation in cinema with this app",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc --project ./tsconfig.json",
        "code:check": "npm run format:check && npm run lint:check",
        "code:fix": "npm run format:fix && npm run lint:fix",
        "dev": "nodemon --watch src -e ts",
        "format:check": "prettier --check \"src/**/*\"",
        "lint:check": "eslint \"src/**/*.{js,json,ts}\"",
        "format:fix": "prettier --loglevel warn --write \"src/**/*\"",
        "lint:fix": "eslint \"src/**/*.{js,json,ts}\" --fix",
        "prebuild": "rimraf dist",
        "prepare": "husky install",
        "prestart": "npm run build",
        "start": "node dist/index.js",
        "postinstall": "tsc",
        "test": "jest --passWithNoTests",
        "test:cov": "jest --coverage --passWithNoTests"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kacperzolkiewski/CodersCamp2020.CinemaApp.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/kacperzolkiewski/CodersCamp2020.CinemaApp/issues"
    },
    "homepage": "https://github.com/kacperzolkiewski/CodersCamp2020.CinemaApp#readme",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cookie-parser": "^1.4.5",
        "dotenv": "^8.2.0",
        "envalid": "^7.0.0",
        "express": "^4.17.1",
        "express-pino-logger": "^6.0.0",
        "jsonwebtoken": "^8.5.1",
        "lint": "^0.7.0",
        "lodash": "^4.17.21",
        "mongodb": "^3.6.4",
        "pino": "^6.11.2",
        "pino-logger": "^1.0.0",
        "prettify": "^0.1.7",
        "mongoose": "^5.12.0",
        "pino-pretty": "^4.7.1",
        "swagger-ui-express": "^4.1.6"
        "nodemon": "^2.0.7",
        "pino": "^6.11.1",
        "express-handlebars": "^3.0.0",
        "nodemailer": "^4.1.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.11",
        "@types/express-pino-logger": "^4.0.2",
        "@types/jest": "^26.0.20",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mongoose": "^5.10.3",
        "@types/node": "^14.14.31",
        "@types/pino": "^6.3.6",
        "@types/swagger-ui-express": "^4.1.2",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "coveralls": "^3.1.0",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^5.1.3",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.4",
        "nodemon": "^2.0.7",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.2",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.3"
    },
    "lint-staged": {
        "src/**/*.{js,json,ts}": [
            "prettier --write",
            "eslint --fix --max-warnings 0"
        ]
    }
}
