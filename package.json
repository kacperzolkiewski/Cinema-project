{
    "name": "coderscamp2020.cinemaapp",
    "version": "1.0.0",
    "description": "You can make a reservation in cinema with this app",
    "main": "dist/index.js",
    "scripts": {
        "format-check": "prettier --check \"src/**/*\"",
        "prettify": "prettier --loglevel warn --write \"src/**/*\"",
        "lint": "eslint \"src/**/*.{js,json,ts}\"",
        "lint:fix": "eslint \"src/**/*.{js,json,ts}\" --fix",
        "build": "tsc",
        "dev": "ts-node ./src/server.ts",
        "prestart": "npm run build",
        "start": "node .",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/kacperzolkiewski/CodersCamp2020.CinemaApp.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/kacperzolkiewski/CodersCamp2020.CinemaApp/issues"
    },
    "homepage": "https://github.com/kacperzolkiewski/CodersCamp2020.CinemaApp#readme",
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "mongoose": "^5.11.18",
        "nodemon": "^2.0.7",
        "ts-node": "^9.1.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.11",
        "@types/node": "^14.14.31",
        "@typescript-eslint/eslint-plugin": "^4.15.2",
        "@typescript-eslint/parser": "^4.15.2",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.0.0",
        "eslint-plugin-prettier": "^3.3.1",
        "husky": "^4.3.8",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "typescript": "^4.2.2"
    },
    "lint-staged": {
        "*.{js,json,ts}": [
            "prettier --write",
            "eslint --fix --max-warnings 0",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
